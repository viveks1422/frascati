<% layout('layout') %>
<div class="container">
	<h1>Subscription Plans</h1>
	<table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th></th>
        <th>Plans</th>
        <th>Duration</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
    	<% subscriptions.forEach(function(subscription,index){%>
      <tr>
        <td><%=index+1%></td>
        <td><%=: subscription.name | capitalize %></td>
        <td><%=: subscription.type | capitalize %></td>
        <td><%=: (subscription.price==0) ? "free" : subscription.price | capitalize %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>