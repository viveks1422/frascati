<% layout('layout') %>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">
              Sign in to Eaemaquinas
            </h1>
            <div class="account-wall">
                <!-- signin through social plugins-->
                <span>
                  <a href="/auth/facebook">
                    <img width="80" class="pointer_class" src="images/facebook.png"/>
                  </a>
                </span>
                <span>
                  <img width="80" class="pointer_class" src="images/twitter.png"/>
                </span>
                <span>
                  <img width="80" class="pointer_class" src="images/linkdin.png"/>
                </span>
                <span>
                  <img width="80" class="pointer_class" src="images/google.png"/>
                </span>
                <!-- signin through social plugins-->
                <h2 class="text-center login-title">OR</h5>
                <form class="form-signin"
                      name="form"
                      ng-submit="login(form)"
                      novalidate>

                    <div ng-class="{'has-error': form.email.$error.mongoose}">
                        <input type="text"
                               class="form-control"
                               placeholder="Email"
                               name="email"
                               ng-model="user.email"
                               required
                               autofocus
                               mongoose-error>
                        <p class="help-block"
                           ng-show="form.email.$error.mongoose">
                            {{ errors.email }}
                        </p>
                    </div>

                    <div ng-class="{'has-error': form.password.$error.mongoose}">
                        <input type="password"
                               class="form-control"
                               placeholder="Password"
                               name="password"
                               ng-model="user.password"
                               required
                               mongoose-error>
                        <p class="help-block"
                           ng-show="form.password.$error.mongoose">
                            {{ errors.password }}
                        </p>
                    </div>

                    <div class="form-group has-error">
                        <p class="help-block">{{ error.other }}</p>
                    </div>

                    <button class="btn btn-lg btn-primary btn-block" type="submit"> Sign in </button>

                    <span class="clearfix"></span>
                </form>
            </div>

            <a href="/signup" class="text-center new-account">Create an account </a>
        </div>
    </div>
</div>
<style>
  /*some extra styles by vivek*/
  .pointer_class{
    cursor: pointer;
  }
</style>
