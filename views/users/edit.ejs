<% layout('/layout') %>
<%=user%>
<div class="row">
	<div class="col-sm-6">
		<div class="well">
			<p>
				<!-- LOGIN FORM -->
				<form method="POST" action="/signup">
					<div class="form-group">
						<label>Username*</label>
						<input type="text" required class="form-control" name="username" value="<%=user.username%>">
					</div>
					<div class="form-group">
						<label>Email*</label>
						<input type="email" required class="form-control" name="email" value="<%=user.local.email%>">
					</div>
					<div class="form-group">
						<label>Address</label>
						<input type="text"  class="form-control" name="address" value="<%=user.address%>">
					</div>
					<div class="form-group">
						<label>Phone</label>
						<input type="text"  class="form-control" name="phone" value="<%=user.phone%>">
					</div>
					<button type="submit" class="btn btn-warning btn-lg">Update</button>
				</form>
				<hr>
			</p>
		</div>
	</div>
</div>