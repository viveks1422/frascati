<% layout('/layout') %>
<div class="container">
	<h1>User list</h1>
  <div style="float:right"><input type="button" onclick="javascript:window.location='/admin/users/new'" value="Add user" class="btn btn-success btn-lg"/>
  </div>  
	<table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    	<% users.forEach(function(user,index){%>
      <tr>
        <td><%=index+1%></td>
        <td><%=user.name || "" %></td>
        <td><%=user.local.email%></td>
        <td><%=user.role || "" %></td>
        <td><a href="/user/<%=user._id%>/edit" class="btn btn-default btn-sm">Edit</a>
        <a href="/user/<%=user._id%>/delete" onclick="javascript: var varConfirm=confirm('Are you sure to delete the user?'); if(!varConfirm) return false;" class="btn btn-default btn-sm">Delete</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <input type="button" onclick="javascript:window.location='/profile'" value="Back" class="btn btn-warning btn-lg"/>  
</div>