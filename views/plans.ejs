<% layout('layout') %>
<div class="container">
	<h1>Subscription Plans</h1>
	<table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th></th>
        <th>Plans</th>
        <th>Duration</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
    	<% plans.forEach(function(plan,index){%>
      <tr>
        <td><%=index+1%></td>
        <td><%=: plan.name | capitalize %></td>
        <td><%=: plan.type | capitalize %></td>
        <td><%=: (plan.price==0) ? "free" : plan.price | capitalize %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>